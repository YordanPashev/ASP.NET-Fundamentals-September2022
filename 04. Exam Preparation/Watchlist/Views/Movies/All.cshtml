@using Watchlist.Models

@model MovieViewModel[]

@{
    ViewBag.Title = "Movies";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var movie in Model)
    {
        <div class="card col-4" style="width: 17rem; background-color: transparent; border: 3px solid; border-radius: 15px; border-color: whitesmoke; backdrop-filter: blur(20px);">
            <img class="card mt-2" style="width: 15rem; height: 20rem; border: 3px solid; border-color: transparent; border-radius: 15px"
             src="@movie.ImageUrl" alt="Movie Image">
            <div class="card-body">

                <h3 class="card-title mt-1" style="color: white; font-weight: bold">@movie.Title</h3>
                <p class="mb-0" style="color: white"><i>Director: @movie.Director</i></p>
                <p class="mb-0" style="color: white"><i>Rating: @movie.Rating</i></p>
                <p style="color: white"><i>Genre: @movie.Genre</i></p>
            </div>

            <form class="input-group-sm" asp-route-movieId="@movie.Id" asp-controller="Movies" asp-action="AddToCollection" method="post">
                <input type="submit" value="Mark as Watched" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>

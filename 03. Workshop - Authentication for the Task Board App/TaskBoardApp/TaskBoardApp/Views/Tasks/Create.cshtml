@model CreateTaskViewModel

@{
    ViewData["Title"] = "Create Task";
}

@if(@ViewBag.UserMessage != null)
{
    <h3><i style="color: yellow; background-color: yellow; border-radius: 5px;">
        @ViewBag.UserMessage</i>
    </h3>
}

<div class="row">
    <div class="col-md-6 mx-auto" style="text-align: center; backdrop-filter: blur(4px); border: 2px solid; border-color: #EFCFC3; border-radius: 35px">
        <section>
            <h1 style="color: #EFCFC3; text-align: center; font-weight: bold;">@ViewData["Title"]</h1>
            @if(@ViewBag.UserMessage != null)
            {
                <h2  style="color: darkred; background-color: green; border-radius: 5px;">@ViewBag.UserMessage</h2>
            }
            <hr />
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="@Model.Title" class="form-control mt-2" autocomplete="Title" aria-required="true" />
                    <label asp-for="@Model.Title" class="form-label"></label>
                    <span asp-validation-for="@Model.Title" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.Description" class="form-control mt-2" autocomplete="Description" aria-required="true" />
                    <label asp-for="@Model.Description" class="form-label"></label>
                    <span asp-validation-for="@Model.Description" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
                </div>
                <div class="mb-3" style="text-align: center; color: white">
                <label asp-for="@Model.BoardId" class="form-label mt-2" style="color: white; font-weight: bold; font-style: italic; backdrop-filter: blur(8px); border-color: #EFCFC3; border-radius: 5px">
                    Boards
                </label>
                <select asp-for="@Model.BoardId" class="form-control">
                    @foreach (var board in Model.ExistingBoards)
                    {
                        <option value="@board.Id">@board.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.BoardId" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>

            </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg bg-success mt-3 mb-5" style="color: white">Create</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

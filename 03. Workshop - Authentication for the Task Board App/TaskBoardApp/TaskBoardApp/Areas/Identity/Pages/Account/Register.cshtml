@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6 mx-auto" style="text-align: center; backdrop-filter: blur(4px); border: 2px solid; border-color: #EFCFC3; border-radius: 35px">
        <h1 style="color: #EFCFC3; text-align: center; font-weight: bold;">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 style="color: #EFCFC3; font-style: italic;">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control mt-2" />
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control mt-2" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control mt-2" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control mt-2" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control mt-2" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control mt-2" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg bg-success mt-3 mb-4" style="color: white">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

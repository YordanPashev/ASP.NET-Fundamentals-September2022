@page
@model LoginModel

@{
    ViewData["Title"] = "CreateBoard";
}

<div class="row">
    <div class="col-md-6 mx-auto" style="text-align: center; backdrop-filter: blur(4px); border: 2px solid; border-color: #EFCFC3; border-radius: 35px">
        <section>
            <h1 style="color: #EFCFC3; text-align: center; font-weight: bold;">@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h2 style="color: #EFCFC3; font-style: italic;">Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Username" class="form-control mt-2" autocomplete="Username" aria-required="true" />
                    <label asp-for="Input.Username" class="form-label"></label>
                    <span asp-validation-for="Input.Username" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mt-2" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger" style="background-color: yellow; border-radius: 5px"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg bg-success mt-3 mb-4" style="color: white">Log in</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

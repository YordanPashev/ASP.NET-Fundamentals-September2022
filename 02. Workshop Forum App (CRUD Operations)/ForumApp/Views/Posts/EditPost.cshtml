@using ForumApp.Models.Posts
@model PostViewModel

@{
    ViewBag.Title = "Edit Post";
}

@if (@ViewBag.UserMessage != null)
{
    <h1 class="text-center">
        <strong style="color: red; background-color: yellow; font-weight: bold; border-radius: 5px">@ViewBag.UserMessage</strong>
    </h1>
}    

<h2 class="text-center"><strong>@ViewBag.Title</strong></h2>
<hr />

<div class="row" style="backdrop-filter: blur(10px); border: 2px solid; border-color: white; border-radius: 15px">
    <form asp-action="EditPost" method="post">
        <div class="form-group">
            <div class="mt-3 mb-3">
                <label asp-for="Title" style="color: white"></label>
                <input asp-for="Title" class="form-control" placeholder="Write your title here...">
                <span asp-validation-for="@Model.Title" class="small text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content" style="color: white;"></label>
                <input asp-for="Content" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.Content" class="small text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
            </div>
        </div>        
        <div>
            <input  type="hidden" id="country" name="UserName" value="@User.Identity.Name">
        </div>
        <div class="d-grid gap-2 col-1 mx-auto">
            <input class="btn btn-success mt-3 mb-3" type="submit" value="Edit" />
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptspartial" />
}
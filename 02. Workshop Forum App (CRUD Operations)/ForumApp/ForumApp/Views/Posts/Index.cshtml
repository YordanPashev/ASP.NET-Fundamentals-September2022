@using ForumApp.Models.Posts

@model PostViewModel[]

@{
    ViewBag.Title = "All Posts";
}

<h2 class="text-center"><strong>@ViewBag.Title</strong></h2>
<hr />
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Posts" asp-action="Add" class="btn btn-success">Add Post</a>
</div>


@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-6 mt-4">
                <div class="card" style="background-color: darkgray">
                    <div class="card-body">
                        <h5 class="card-title text-center" style="color: black"><strong><i>@post.Title</i></strong></h5>
                        <p class="card-text" style="color: white">@post.Content</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning">Edit</a>
                            <form class="mt-2" asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id">
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Delete" class="btn btn-danger mb-2" />
                                </div>
                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No posts yet!</p>
}
